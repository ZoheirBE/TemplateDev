{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist-electron/main",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["src/shared/*"]
    },
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/main/**/*", "src/shared/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
